<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.best_of_robotics.transform.ros.to.cplusplus.category"
            name="ROS C++">
      </category>
      <command
            categoryId="org.best_of_robotics.transform.ros.to.cplusplus.category"
            id="org.best_of_robotics.transform.ros.to.cplusplus.command.transform"
            name="Generate C++ Code">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.best_of_robotics.transform.ros.to.cplusplus.handler.RosCppTransform"
            commandId="org.best_of_robotics.transform.ros.to.cplusplus.command.transform">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.best_of_robotics.bride.menu?after=additions">
         <menu
               label="ROS">
            <command
                  commandId="org.best_of_robotics.transform.ros.to.cplusplus.command.transform"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
