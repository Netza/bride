<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.best_of_robotics.transform.orocos.to.cplusplus.commands.category"
            name="M2T Category">
      </category>
      <command
            categoryId="org.best_of_robotics.transform.orocos.to.cplusplus.commands.category"
            id="org.best_of_robotics.transform.orocos.to.cplusplus.commands.generateSource"
            name="Generate Orocos Source">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.best_of_robotics.transform.orocos.to.cplusplus.handlers.RttTransformHandler"
            commandId="org.best_of_robotics.transform.orocos.to.cplusplus.commands.generateSource">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.best_of_robotics.bride.menu?after=additions">
         <menu
               id="org.best_of_robotics.transform.orocos.to.cplusplus.menus.brideMenu"
               label="BCM"
               mnemonic="B">
            <command
                  commandId="org.best_of_robotics.transform.orocos.to.cplusplus.commands.generateSource"
                  id="org.best_of_robotics.transform.orocos.to.cplusplus.commands.generateSource"
                  mnemonic="G">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.epsilon.common.dt.tool">
      <tool
            class="org.best_of_robotics.transform.orocos.to.cplusplus.tools.FeautreMapUtilTool"
            defaultName="FeautreMapUtilTool">
      </tool>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.best_of_robotics.bride.ui.category.newWizard"
            class="org.orocos.model.rtt.diagram.part.RttCreationWizard"
            icon="icons/obj16/RttDiagramFile.gif"
            id="org.best_of_robotics.transform.orocos.to.cplusplus.wizard.rttDiagram"
            name="RTT Diagram">
      </wizard>
   </extension>

</plugin>
