<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.best_of_robotics.research.brsu.category"
            name="BRSU Research">
      </category>
      <command
            categoryId="org.best_of_robotics.research.brsu.category"
            id="org.best_of_robotics.research.brsu.command"
            name="BRSU Transform">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.best_of_robotics.research.brsu.BrsuTransform"
            commandId="org.best_of_robotics.research.brsu.command">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.best_of_robotics.bride.menu?after=additions">
         <command
               commandId="org.best_of_robotics.research.brsu.command"
               id="org.best_of_robotics.research.brsu.command"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
